pipeline {
  environment {
    registry = "kaestlim/trafficlight"
    registryCredential = 'dockerhub'
  }
  agent any
  stages {
    stage('Cloning repo') {
      steps{
        script {
          git branch: 'main',
          url: 'https://github.com/kaestlim-bzz/trafficlight'
        }
      }
    }
    stage('Building image') {
      steps{
        script {
          docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }
  }
}
